{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DatabaseConnection": "User Id=postgres;Password=postgres;Database=postgres;Server=postgres;Port=5432"
  },
  "JwtSettings": {
    "SecretKey": "Default_Super_Secret_256_Bits_Signing_Key",
    "ValidateIssuer": "false",
    "ValidIssuer": "https://localhost:44370/",
    "ValidateAudience": "false",
    "ValidAudience": "https://localhost:44370/",
    "AccessTokenExpirationInMinutes": "100"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./.logs/log-.log",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithThreadId", "WithMachineName"]
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  }
}
